         <font>
            <Font name="System Bold Italic" size="19.0" />
         </font>
      </CheckBox>
      <Label fx:id="myLabel" layoutX="193.0" layoutY="183.0" text="OFF" textFill="#183fda">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <ImageView fx:id="myImageView" fitHeight="150.0" fitWidth="162.0" layoutX="130.0" layoutY="20.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@foto1.jpg" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
